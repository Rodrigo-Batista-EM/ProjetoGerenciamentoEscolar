@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-speedometer2 me-2"></i>
            Dashboard
        </h1>
        <p class="text-muted">Bem-vindo ao Sistema Escolar - Gerencie alunos e cidades de forma eficiente</p>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-people-fill text-primary fs-2"></i>
                    </div>
                </div>
                <h5 class="card-title text-primary fw-semibold">Gerenciar Alunos</h5>
                <p class="card-text text-muted small">Cadastre, edite e visualize informações dos alunos matriculados</p>
                <a asp-controller="Aluno" asp-action="Index" class="btn btn-primary btn-sm">
                    <i class="bi bi-arrow-right me-1"></i>
                    Acessar Módulo
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-geo-alt-fill text-success fs-2"></i>
                    </div>
                </div>
                <h5 class="card-title text-success fw-semibold">Gerenciar Cidades</h5>
                <p class="card-text text-muted small">Administre as cidades disponíveis para vinculação dos alunos</p>
                <a asp-controller="Cidade" asp-action="Index" class="btn btn-success btn-sm">
                    <i class="bi bi-arrow-right me-1"></i>
                    Acessar Módulo
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="mb-3">
                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-file-earmark-text-fill text-info fs-2"></i>
                    </div>
                </div>
                <h5 class="card-title text-info fw-semibold">Relatórios</h5>
                <p class="card-text text-muted small">Gere relatórios e análises dos dados cadastrados</p>
                <button class="btn btn-info btn-sm text-white" onclick="alert('Módulo de relatórios em desenvolvimento')">
                    <i class="bi bi-arrow-right me-1"></i>
                    Em Breve
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-lightning-fill me-2"></i>
                    Acesso Rápido
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                            <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                <i class="bi bi-person-plus-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">Novo Aluno</h6>
                                <p class="mb-0 text-muted small">Cadastrar novo aluno no sistema</p>
                                <a asp-controller="Aluno" asp-action="Create" class="btn btn-outline-primary btn-sm mt-2">
                                    Cadastrar
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded-3">
                            <div class="bg-success bg-opacity-10 rounded p-2 me-3">
                                <i class="bi bi-building-fill-add text-success fs-4"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-semibold">Nova Cidade</h6>
                                <p class="mb-0 text-muted small">Adicionar nova cidade ao cadastro</p>
                                <a asp-controller="Cidade" asp-action="Create" class="btn btn-outline-success btn-sm mt-2">
                                    Adicionar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h5 class="card-title mb-0 text-primary">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Estatísticas Rápidas
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-6">
                        <div class="p-3">
                            <div class="display-6 text-primary fw-bold">@ViewBag.TotalAlunos</div>
                            <div class="text-muted small">Alunos Cadastrados</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3">
                            <div class="display-6 text-success fw-bold">@ViewBag.TotalCidades</div>
                            <div class="text-muted small">Cidades Disponíveis</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animação de entrada dos cards
        $(document).ready(function() {
            $('.card').each(function(index) {
                $(this).hide().fadeIn(300 + (index * 100));
            });
        });
    </script>
}