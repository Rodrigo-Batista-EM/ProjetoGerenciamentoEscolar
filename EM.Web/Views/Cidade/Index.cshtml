@model IEnumerable<Em.Web.Models.CidadeViewModel>

@{
    ViewData["Title"] = "Gerenciar Cidades";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="display-6 text-primary fw-bold">
            <i class="bi bi-geo-alt-fill me-2"></i>
            @ViewData["Title"]
        </h1>
        <p class="text-muted mb-0">Gerencie as cidades cadastradas no sistema</p>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>
            Nova Cidade
        </a>
    </div>
</div>

<!-- Card de Busca -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="searchType" class="form-label">Tipo de Busca</label>
                <select id="searchType" class="form-select">
                    <option value="nome">Nome</option>
                    <option value="codigo">Código</option>
                    <option value="uf">UF</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="searchInput" class="form-label">Buscar</label>
                <input type="text" id="searchInput" class="form-control" placeholder="Digite o termo de busca...">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="button" class="btn btn-outline-primary w-100" onclick="filtrarTabela()">
                    <i class="bi bi-search me-1"></i>
                    Buscar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-list-ul me-2"></i>
                    Lista de Cidades
                </h5>
                <span class="badge bg-secondary rounded-pill">
                    @Model.Count() cidade(s)
                </span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="cidadesTable">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 fw-semibold text-uppercase text-muted small">
                                    <i class="bi bi-hash me-1"></i>
                                    Código
                                </th>
                                <th class="border-0 fw-semibold text-uppercase text-muted small">
                                    <i class="bi bi-building me-1"></i>
                                    Nome
                                </th>
                                <th class="border-0 fw-semibold text-uppercase text-muted small">
                                    <i class="bi bi-map me-1"></i>
                                    UF
                                </th>
                                <th class="border-0 fw-semibold text-uppercase text-muted small text-center">
                                    <i class="bi bi-gear me-1"></i>
                                    Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var cidade in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold text-primary">
                                            @cidade.Codigo.ToString("D3")
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-geo-alt text-primary"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@cidade.Nome</div>
                                                    <small class="text-muted">Cidade</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                @cidade.UF
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Edit" asp-route-id="@cidade.Codigo" class="btn btn-outline-primary btn-sm" title="Editar cidade">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmarExclusao('@cidade.Codigo', '@cidade.Nome')" title="Excluir cidade">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        <div class="text-muted">
                                            <i class="bi bi-inbox display-6 d-block mb-2"></i>
                                            <h6 class="mb-1">Nenhuma cidade cadastrada</h6>
                                            <p class="mb-3">Comece adicionando uma nova cidade ao sistema</p>
                                            <a asp-action="Create" class="btn btn-primary">
                                                <i class="bi bi-plus-circle me-2"></i>
                                                Adicionar Cidade
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model != null && Model.Any())
            {
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Mostrando @Model.Count() cidade(s)
                        </small>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                                <i class="bi bi-printer me-1"></i>
                                Imprimir
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="exportarCSV()">
                                <i class="bi bi-download me-1"></i>
                                Exportar
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Confirmação -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a cidade <strong id="cidadeNome"></strong>?</p>
                <p class="text-muted mb-0">Esta ação não pode ser desfeita.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Cancelar
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarExclusao(codigo, nome) {
            $('#cidadeNome').text(nome);
            $('#deleteForm').attr('action', '/Cidade/Delete/' + codigo);
            $('#confirmDeleteModal').modal('show');
        }

        function filtrarTabela() {
            var searchType = document.getElementById('searchType').value;
            var searchInput = document.getElementById('searchInput').value.toLowerCase();
            var table = document.getElementById('cidadesTable');
            var rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (var i = 0; i < rows.length; i++) {
                var cells = rows[i].getElementsByTagName('td');
                var shouldShow = false;

                if (searchInput === '') {
                    shouldShow = true;
                } else {
                    if (searchType === 'nome' && cells[1]) {
                        var nome = cells[1].textContent.toLowerCase();
                        shouldShow = nome.includes(searchInput);
                    } else if (searchType === 'codigo' && cells[0]) {
                        var codigo = cells[0].textContent.toLowerCase();
                        shouldShow = codigo.includes(searchInput);
                    } else if (searchType === 'uf' && cells[2]) {
                        var uf = cells[2].textContent.toLowerCase();
                        shouldShow = uf.includes(searchInput);
                    }
                }

                rows[i].style.display = shouldShow ? '' : 'none';
            }
        }

        function exportarCSV() {
            var csv = 'Código;Nome;UF\n';

            // CORREÇÃO: Usar JavaScript puro para gerar CSV
            var table = document.querySelector('table');
            var rows = table.querySelectorAll('tbody tr');

            rows.forEach(function(row) {
                if (row.cells.length === 4) { // Ignorar linha vazia
                    var codigo = row.cells[0].textContent.trim();
                    var nome = row.cells[1].querySelector('.fw-semibold').textContent.trim();
                    var uf = row.cells[2].textContent.trim();

                    csv += codigo + ';' + nome + ';' + uf + '\n';
                }
            });

            var blob = new Blob(["\uFEFF" + csv], { type: 'text/csv;charset=utf-8;' });
            var link = document.createElement('a');
            var url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', 'cidades_' + new Date().toISOString().slice(0, 10) + '.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        // Busca em tempo real
        document.getElementById('searchInput').addEventListener('keyup', function(e) {
            if (e.key === 'Enter') {
                filtrarTabela();
            }
        });

        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}