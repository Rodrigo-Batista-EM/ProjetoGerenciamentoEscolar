@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="row justify-content-center">
    <div class="col-lg-6 text-center">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-5">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger display-1"></i>
                </div>
                <h1 class="display-4 text-danger fw-bold mb-3">Oops!</h1>
                <h2 class="h4 text-muted mb-4">Algo deu errado</h2>
                
                @if (Model?.ShowRequestId ?? false)
                {
                    <p class="text-muted mb-4">
                        <strong>ID da Requisição:</strong> <code>@Model.RequestId</code>
                    </p>
                }
                
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">
                        <i class="bi bi-info-circle me-2"></i>
                        O que aconteceu?
                    </h5>
                    <p class="mb-0">
                        Ocorreu um erro ao processar sua solicitação. Nossa equipe foi notificada e está trabalhando para resolver o problema.
                    </p>
                </div>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="bi bi-house me-1"></i>
                        Voltar para Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto redirect to home after 10 seconds
        setTimeout(function() {
            window.location.href = '/';
        }, 10000);
    </script>
}